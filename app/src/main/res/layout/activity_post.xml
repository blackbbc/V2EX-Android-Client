<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.sweet.myapplication.PostActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:elevation="100dp"
            card_view:cardCornerRadius="8dp"
            card_view:contentPaddingTop="10dp"
            card_view:contentPaddingLeft="10dp"
            card_view:contentPaddingRight="10dp"
            card_view:contentPaddingBottom="0dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大家有什么比较优秀的，较为独立的英文新闻站点可以推荐吗，谢谢！"
                    android:textColor="#005465"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:transitionName="test1"/>

                <TextView
                    android:id="@+id/postcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#005465"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:visibility="gone"/>

                <com.example.sweet.myapplication.widget.ProgressBarCircular
                    android:id="@+id/progress"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:textSize="24sp"
                    android:layout_below="@+id/tintradio"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="clip_horizontal|center_horizontal"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:text="baozijun"
                            android:textColor="#005465"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:text="44分钟前 0个回复"
                            android:textColor="#005465" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="程序员"
                        android:textColor="#005465"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:id="@+id/post_recyclerview">
        </android.support.v7.widget.RecyclerView>


    <com.example.sweet.myapplication.widget.FloatingActionButton
        android:id="@+id/fabButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp" />


</RelativeLayout>
