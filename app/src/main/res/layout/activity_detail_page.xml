<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="40px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="detail_element"
    tools:context="me.sweetll.v2ex.DetailPageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textColor="@color/primary_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="说一说最能提高你 Coding 效率的音乐，回头我在网易晕音乐开个歌单好了，喵～"
        android:id="@+id/detail_title" />

    <com.marshalchen.ultimaterecyclerview.CustomUltimateRecyclerview
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ultimate_recycler_view"
        android:layout_below="@id/detail_title"
        app:recyclerviewClipToPadding="true"
        app:recyclerviewPadding="2dp">
    </com.marshalchen.ultimaterecyclerview.CustomUltimateRecyclerview>

</RelativeLayout>
